{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",

    "strict": true,

    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "importHelpers": true,
    "esModuleInterop": true,
    "jsx": "react",

    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "baseUrl": "src",
    "paths": {
      "common": ["common"],
      "renderer": ["renderer"],
      "main": ["main"]
    }
  },

  "include": ["src/**/*"]
}
