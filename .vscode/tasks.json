{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch all source files",
      "command": "node_modules/.bin/tsc",
      "windows": {
        "command": "node_modules\\.bin\\tsc"
      },
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": ["--watch", "--project", ".", "--noEmit", "--skipLibCheck"],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
  ]
}
