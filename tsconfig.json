{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "module": "esnext",
        "importHelpers": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "common": ["common"],
            "renderer": ["renderer"],
            "main": ["main"]
        },
        "isolatedModules": true,

        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "sourceMap": true
    },

    "include": ["src/**/*"],
}
