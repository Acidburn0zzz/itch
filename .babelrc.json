{
  "presets": [
    "@babel/react",
    "@babel/typescript",
    [
      "@babel/env",
      {
        "targets": { "electron": "9.0.0" }
      }
    ]
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-proposal-nullish-coalescing-operator",
    "react-refresh/babel",
    ["inline-json-import", {}],
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "common": "./src/common",
        "renderer": "./src/renderer",
        "main": "./src/main",
        "static": "./src/static"
      }
    }]
  ]
}
